{
  "name": "babylon-scanlation",
  "type": "module",
  "version": "0.0.1",
  "overrides": {
    "esbuild": "0.25.12"
  },
  "scripts": {
    "dev": "astro dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "astro check",
    "build": "astro build",
    "preview": "astro build && wrangler pages dev ./dist",
    "astro": "astro",
    "deploy": "astro build && wrangler pages deploy",
    "cf-typegen": "wrangler types",
    "dev:cf": "concurrently \"wrangler pages dev --proxy 8789\" \"astro dev --port 8789\"",
    "start": "astro start",
    "db:pull": "wrangler d1 export babylon-scanlation-prod --remote --output=./db_snapshots/dump.sql",
    "db:reset:local": "if exist .wrangler\\state\\v3\\d1 rd /s /q .wrangler\\state\\v3\\d1",
    "db:local": "wrangler d1 execute babylon-scanlation-prod --local --file=./db_snapshots/dump.sql",
    "db:migrate": "wrangler d1 migrations apply babylon-scanlation-prod --local",
    "db:offline": "npm run db:reset:local && npm run db:migrate && npm run dev:cf",
    "db:online": "npm run db:pull && npm run db:reset:local && npm run db:local && npm run db:migrate && npm run dev:cf",
    "db:generate": "dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate:local": "drizzle-kit migrate:sqlite",
    "db:push": "drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/db": "^0.18.3",
    "@astrojs/svelte": "^7.2.4",
    "@zip.js/zip.js": "^2.7.64",
    "astro": "^5.16.0",
    "cropperjs": "^1.5.13",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.45.1",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "jose": "^6.0.12",
    "svelte": "^5.46.0",
    "swiper": "^11.2.10",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250801.0",
    "@types/cropperjs": "^1.3.3",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "astro-eslint-parser": "^1.2.2",
    "concurrently": "^9.2.0",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "esbuild": "0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "^3.7.1",
    "prettier-plugin-astro": "^0.14.1",
    "typescript-eslint": "^8.46.2",
    "wrangler": "^4.25.0"
  }
}
