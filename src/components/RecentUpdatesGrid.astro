---
import UpdateCard from './UpdateCard.astro';
import type { Series } from '../types';

interface Props {
  mangas: Series[];
  title?: string;
}

const { mangas = [], title = 'Últimos Capítulos Publicados' } = Astro.props;
---

<section class="recent-updates-section">
  <h2>{title}</h2>

  {
    mangas && mangas.length > 0 ? (
      <div class="grid-container">
        {mangas.map((manga) => (
          <UpdateCard series={manga} />
        ))}
      </div>
    ) : (
      <p>No hay capítulos recientes para mostrar.</p>
    )
  }
</section>

<style>
  .recent-updates-section {
    max-width: 1200px;
    /* ✅ AJUSTE: Reducido el margen */
    margin: 2rem auto;
    padding: 0 1rem;
  }
  h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .grid-container {
    display: grid;
    /* ✅ AJUSTE: Cambiado minmax para adaptarse al nuevo diseño */
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1.5rem;
  }
</style>
