---
// src/components/HeroCarousel.astro
import type { Series } from '../types';
import 'swiper/css';
import 'swiper/css/pagination';
import 'swiper/css/navigation';
import 'swiper/css/effect-fade';

interface Props {
  slides: Series[];
  title?: string;
}

const { slides = [], title } = Astro.props;

// Duplicar slides si son pocos
let renderSlides = [...slides];
if (renderSlides.length > 0 && renderSlides.length < 3) {
  while (renderSlides.length < 4) {
    renderSlides = [...renderSlides, ...slides];
  }
}
---

<section class="hero-carousel-section">
  {title && <h2 class="carousel-title">{title}</h2>}
  
  <div class="carousel-wrapper-relative">
    <div class="swiper hero-swiper">
      <div class="swiper-wrapper">
        {renderSlides.map((slide) => (
          <div class="swiper-slide">
            <a href={`/series/${slide.slug}`} class="slide-link-wrapper" draggable="false">
              <div
                class="slide-background-blur"
                style={`background-image: url(${slide.cover_image_url})`}
              />
              <div class="gradient-overlay" />
              
              <div class="slide-content-wrapper">
                <div class="image-box">
                  <img
                    src={slide.cover_image_url}
                    alt={`Portada de ${slide.title}`}
                    class="hero-cover-img"
                    loading="lazy"
                    draggable="false"
                    onerror="this.onerror=null; this.src='/favicon.svg';"
                  />
                </div>
                <div class="text-container">
                  <h3>{slide.title}</h3>
                  <p>{slide.description}</p>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Controles Externos -->
    <div class="swiper-pagination custom-pagination"></div>
    <div class="swiper-button-prev custom-nav-btn prev-btn"></div>
    <div class="swiper-button-next custom-nav-btn next-btn"></div>
  </div>
</section>

<script>
  import Swiper from 'swiper';
  import { Pagination, Navigation, Autoplay, EffectFade } from 'swiper/modules';

  const initSwiper = () => {
    const swiperEl = document.querySelector('.hero-swiper') as HTMLElement;
    const paginationEl = document.querySelector('.custom-pagination') as HTMLElement;
    const prevEl = document.querySelector('.prev-btn') as HTMLElement;
    const nextEl = document.querySelector('.next-btn') as HTMLElement;
    
    if (!swiperEl || !paginationEl) return;
    if ((swiperEl as any).swiper) return;

    new Swiper(swiperEl, {
      modules: [Pagination, Navigation, Autoplay, EffectFade],
      slidesPerView: 1,
      loop: true,
      effect: 'fade',
      fadeEffect: { crossFade: true },
      
      // Habilitar arrastre
      allowTouchMove: true,
      
      autoplay: {
        delay: 5000,
        disableOnInteraction: false, // Seguir moviéndose después de tocar
        pauseOnMouseEnter: true, // Pausar si el mouse está encima (mejor UX en PC)
      },
      
      pagination: {
        el: paginationEl,
        clickable: true,
      },
      
      navigation: {
        prevEl: prevEl,
        nextEl: nextEl,
      },
    });
  };

  document.addEventListener('astro:page-load', initSwiper);
  document.addEventListener('DOMContentLoaded', initSwiper);
</script>

<style>
  .hero-carousel-section {
    width: 100%;
  }
  .carousel-wrapper-relative {
    position: relative;
    width: 100%;
  }
  .carousel-title {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--font-color);
    text-align: center;
    margin-top: 0;
    padding-top: 0;
  }
  
  .hero-swiper {
    width: 100%;
    height: 500px;
    position: relative;
    overflow: hidden;
    background-color: #121212;
    z-index: 1;
    border-radius: 12px;
  }

  .swiper-slide {
    width: 100%;
    height: 100%;
    background-color: #121212;
  }

  .slide-link-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    text-decoration: none;
    position: relative;
    color: inherit;
    /* Evitar que el enlace se arrastre como imagen */
    -webkit-user-drag: none;
  }
  
  .slide-background-blur {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: blur(15px) brightness(0.3);
    transform: scale(1.1);
    z-index: 0;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, #121212 15%, transparent 100%);
    z-index: 1;
  }

  .slide-content-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    width: 100%;
    height: 100%;
    padding: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .image-box {
    flex-shrink: 0;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.7);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .slide-link-wrapper:hover .image-box {
    transform: scale(1.02);
  }

  .hero-cover-img {
    width: 240px;
    height: auto;
    aspect-ratio: 2 / 3;
    object-fit: cover;
    display: block;
    -webkit-user-drag: none; /* Evitar ghosting al arrastrar */
  }

  .text-container {
    color: #fff;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .text-container h3 {
    font-size: 2.8rem;
    margin-bottom: 0.75rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.8);
    line-height: 1.1;
    font-weight: 800;
  }

  .text-container p {
    font-size: 1rem;
    margin-bottom: 0;
    color: #ddd;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Paginación */
  .custom-pagination {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    z-index: 10;
    text-align: center;
  }

  :global(.custom-pagination .swiper-pagination-bullet) {
    background-color: #fff;
    opacity: 0.3;
    width: 30px;
    height: 4px;
    margin: 0 4px;
    display: inline-block;
    border-radius: 2px;
    transition: all 0.3s ease;
    cursor: pointer;
    pointer-events: auto;
  }
  
  :global(.custom-pagination .swiper-pagination-bullet-active) {
    background-color: var(--accent-color);
    opacity: 1;
    width: 45px;
  }

  /* Flechas de Navegación */
  .custom-nav-btn {
    color: rgba(255, 255, 255, 0.5);
    transition: color 0.2s, transform 0.2s;
    width: 50px;
    height: 50px;
    z-index: 20; /* Encima del swiper */
  }
  .custom-nav-btn:hover {
    color: var(--accent-color);
    transform: scale(1.1);
  }
  .custom-nav-btn::after {
    font-size: 2rem;
    font-weight: bold;
  }
  .prev-btn { left: 20px; }
  .next-btn { right: 20px; }

  /* --- MÓVIL --- */
  @media (max-width: 768px) {
    .hero-swiper {
      height: 550px;
    }

    /* Ocultar flechas en móvil */
    .custom-nav-btn {
      display: none;
    }

    .slide-link-wrapper {
      align-items: flex-start;
    }

    .slide-content-wrapper {
      flex-direction: column;
      padding: 2rem 1.5rem 4rem;
      gap: 1.5rem;
      justify-content: flex-start;
    }

    .image-box {
      width: 160px;
      margin-top: 1rem;
    }

    .hero-cover-img {
      width: 100%;
    }

    .text-container {
      text-align: center;
      align-items: center;
    }

    .text-container h3 {
      font-size: 1.8rem;
      min-height: 2.4em;
      display: flex;
      align-items: center;
      margin-bottom: 0.5rem;
    }

    .text-container p {
      font-size: 0.9rem;
      -webkit-line-clamp: 3;
    }

    .slide-background-blur {
      filter: brightness(0.2);
    }
  }
</style>