---
// src/components/UpdateCard.astro
import Image from './Image.astro';
import type { Series } from '../types';
import { timeAgo } from '../lib/utils';

interface Props {
  series: Series;
}

const { series } = Astro.props;

interface ChapterInfo {
  number: number;
  createdAt: string;
  url_portada?: string; // Add url_portada here
  thumbnail_url?: string; // Keep existing thumbnail_url
  title?: string; // Add title as it's used
  views?: number; // Add views as it's used
}
---

<a href={`/series/${series.slug}`} class="update-card">
  <div class="card-background">
    <Image
      src={series.cover_image_url}
      alt={`Portada de ${series.title}`}
      width={400}
      height={600}
      loading="lazy"
    />
  </div>
  <div class="card-overlay">
    <h3 class="series-title">{series.title}</h3>
    <div class="chapters-info">
      {
        series.chapters &&
          series.chapters.map((chapter: ChapterInfo) => (
            <div class="chapter-entry">
              {/* Use chapter.url_portada if available, otherwise chapter.thumbnail_url */}
              {(chapter.url_portada || chapter.thumbnail_url) && (
                <img
                  src={chapter.url_portada || chapter.thumbnail_url}
                  alt={`Miniatura Capítulo ${chapter.number}`}
                  class="chapter-thumbnail"
                />
              )}
              <div class="chapter-details">
                <span class="chapter-number">Capítulo {chapter.number}</span>
                {chapter.title && (
                  <span class="chapter-title">{chapter.title}</span>
                )}
                <div class="chapter-meta">
                  {chapter.views !== undefined && (
                    <span class="chapter-views">{chapter.views} vistas</span>
                  )}
                  <time class="chapter-time">{timeAgo(chapter.createdAt)}</time>
                </div>
              </div>
            </div>
          ))
      }
    </div>
  </div>
</a>

<style>
  .update-card {
    display: block;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 2 / 3;
    transition: transform 0.2s ease-in-out;
  }
  .update-card:hover {
    transform: translateY(-5px);
  }
  .card-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .card-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .card-overlay {
    position: absolute;
    bottom: 0.5rem;
    left: 0.5rem;
    right: 0.5rem;
    border-radius: 12px;
    padding: 0.75rem;
    background: rgba(20, 20, 20, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }
  .series-title {
    font-size: 1rem; /* Reducido para consistencia */
    font-weight: bold;
    color: #fff;
    margin-bottom: 0.5rem; /* Reducido */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .chapters-info {
    display: flex;
    justify-content: space-around;
    gap: 0.75rem; /* Reducido */
  }
  .chapter-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.8rem; /* Reducido */
  }
  .chapter-details span {
    color: #fff;
  }

  /* New styles for chapter entries */
  .chapters-info {
    display: grid; /* Cambio a Grid */
    grid-template-columns: 1fr 1fr; /* 2 Columnas */
    gap: 0.5rem;
    align-items: start;
    margin-top: 0.5rem;
  }

  .chapter-entry {
    display: flex;
    align-items: center;
    gap: 0.4rem; /* Reducido gap */
    width: 100%;
    text-align: left;
    background: rgba(0, 0, 0, 0.4); /* Fondo sutil para distinguir */
    padding: 0.25rem;
    border-radius: 4px;
  }

  .chapter-thumbnail {
    width: 35px; /* Reducido de 50px */
    height: 35px;
    object-fit: cover;
    border-radius: 3px;
    flex-shrink: 0; 
  }

  .chapter-details {
    display: flex;
    flex-direction: column;
    flex-grow: 1; 
    font-size: 0.75rem; /* Reducido */
    overflow: hidden; /* Para el texto largo */
  }

  .chapter-number {
    font-weight: bold;
    color: #fff;
    font-size: 0.8rem;
    line-height: 1.1;
  }

  .chapter-title {
    color: #ccc;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 0.7rem;
    display: none; /* Ocultar título del capítulo en vista compacta si es necesario, o mantenerlo */
  }
  
  /* Mostrar título solo si hay espacio, o truncarlo mucho */
  .chapter-title {
     display: block;
     max-width: 100%;
  }

  .chapter-meta {
    display: flex;
    gap: 0.3rem;
    font-size: 0.65rem; /* Ajustado a 0.65rem */
    color: #aaa;
    margin-top: 1px;
    flex-wrap: wrap; /* Permitir wrap si es muy estrecho */
  }

  .chapter-views {
    /* Styles for views count */
  }

  .chapter-time {
    /* Styles for time ago */
  }

  @media (max-width: 600px) {
    .series-title {
      font-size: 0.9rem;
    }
    .chapter-number {
      font-size: 0.6rem; /* Reducido drásticamente */
    }
    .chapter-meta {
      font-size: 0.75rem; /* Aumentado para mejor legibilidad en móvil */
    }
  }
</style>
