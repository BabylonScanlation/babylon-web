interface Props {
  src: string;
  alt: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  width: number;
  height: number;
}

const {
  src,
  alt,
  class: className,
  loading = 'lazy',
  width,
  height,
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  class={className}
  loading={loading}
  decoding="async"
  width={width}
  height={height}
  style={`width: 100%; height: 100%; aspect-ratio: ${width} / ${height}; object-fit: cover;`}
/>
