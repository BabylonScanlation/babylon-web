---
// src/components/AdminSeriesManager.astro

import AdminSeriesForm from './AdminSeriesForm.astro';
import AdminChapterList from './AdminChapterList.astro';

interface Chapter {
  id: number;
  chapter_number: number;
  title: string | null;
  telegram_file_id: string;
  url_portada: string | null;
}
interface Series {
  id: number;
  title: string;
  description: string;
  cover_image_url: string;
  slug: string;
  chapters: Chapter[];
  status: string | null;
  type: string | null;
  genres: string | null;
  author: string | null;
  artist: string | null;
  published_by: string | null;
  demographic: string | null;
  alternative_names: string | null;
  serialized_by: string | null;
  is_hidden: boolean;
  is_app_series: boolean;
}

interface Props {
  series: Series;
  r2PublicUrlAssets: string;
}

const { series, r2PublicUrlAssets } = Astro.props;
---

<details class="series-details">
  <summary>{series.title}</summary>
  <div class="series-content">
    <AdminSeriesForm series={series} />
    <AdminChapterList series={series} r2PublicUrlAssets={r2PublicUrlAssets} />
  </div>
</details>

<style>
  .series-details {
    background-color: #1a1a1a; /* Un poco más claro que el fondo base */
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid #444; /* Borde más visible */
    overflow: hidden;
    transition: border-color 0.2s;
  }
  
  .series-details:hover {
    border-color: var(--accent-color);
  }

  .series-details summary {
    padding: 1.2rem;
    font-size: 1.25rem;
    font-weight: bold;
    cursor: pointer;
    background-color: #222; /* Fondo de encabezado */
    list-style: none; /* Quitar flecha por defecto si se desea o dejarla */
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #333;
  }

  /* Añadir un indicador visual de expansión */
  .series-details summary::after {
    content: '▼';
    font-size: 0.8rem;
    color: #666;
    transition: transform 0.2s;
  }

  .series-details[open] summary::after {
    transform: rotate(180deg);
  }

  .series-content {
    padding: 1.5rem;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
    background-color: #161616;
  }

  @media (max-width: 900px) {
    .series-content {
      grid-template-columns: 1fr;
    }
  }
</style>
