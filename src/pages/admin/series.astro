  }
  .delete-btn {
    background-color: #c0392b;
    font-weight: bold;
  }
  .chapters-list {
    /* max-height: 600px; */ /* Considera si necesitas limitar la altura */
    overflow-y: auto;
    padding-right: 10px; /* Espacio para scrollbar si aparece */
    border: 1px solid #444; /* Borde alrededor de la lista */
