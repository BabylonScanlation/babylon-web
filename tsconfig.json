{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"]
    },
    "types": ["astro/client"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro", "worker-configuration.d.ts"],
  "exclude": ["node_modules", "dist"]
}