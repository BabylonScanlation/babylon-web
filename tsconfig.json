{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "outDir": "./dist-workers",
    "module": "esnext",
    "target": "es2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"]
    },
    "types": ["astro/client"],
    "composite": true, // <--- ESTO AYUDA A VS CODE A ENTENDER EL PROYECTO GLOBAL
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro" // <--- ESTO ES CRUCIAL
  ],
  "exclude": ["node_modules", "dist"]
}
