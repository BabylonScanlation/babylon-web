{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "outDir": "./dist-workers",
    "module": "esnext",
    "target": "es2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"]
    },
    "types": ["astro/client"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"],
  "exclude": ["node_modules", "dist"]
}
